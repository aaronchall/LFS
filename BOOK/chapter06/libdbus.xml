      <seglistitem>
        <seg>none</seg>
        <seg>libdbus-1.so</seg>
        <seg>/usr/include/dbus-1.0 and /usr/lib/dbus-1.0</seg>
      </seglistitem>
    </segmentedlist>

    <variablelist>
      <bridgehead renderas="sect3">Short Descriptions</bridgehead>
